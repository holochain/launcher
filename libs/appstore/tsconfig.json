{
  "compilerOptions": {
    "outDir": "dist",
    "declarationDir": "dist",
    "rootDir": "./src",
    "declaration": true,
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2021", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true
  },

  "include": ["src/**/*.ts"]
}
