@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

html,
body {
	@apply h-full overflow-hidden;
	overflow-y: auto;
}

@font-face {
	font-family: 'Figtree';
	src: url('/fonts/Figtree-VariableFont_wght.ttf');
}

.h1 {
	@apply text-4xl font-semibold;
}
.h3 {
	@apply pb-8 text-base;
}
.btn-primary {
	@apply btn mb-2 rounded bg-custom-gradient font-semibold;
}
.input {
	@apply mb-4 max-w-56 rounded;
}
