{
  "name": "holochain-launcher-electron",
  "version": "0.0.16-alpha.0",
  "private": true,
  "description": "Holochain Launcher Electron (Prototype)",
  "author": "Holochain Foundation <info@holochain.org> (http://holochain.org)",
  "license": "CAL-1.0",
  "main": "./out/main/index.js",
  "binaries": {
    "holochain": "0.2.3-beta-dev.43",
    "lair_keystore": "0.4.4"
  },
  "workspaces": [
    "src/renderer",
    "libs/*"
  ],
  "scripts": {
    "format": "prettier . \"!src/renderer\" --write",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "lintAndFormatAll": "yarn lint || true && yarn format || true && cd src/renderer && yarn run check || true && yarn lint || true && yarn format || true && cd ../..",
    "lintAndFormatAllPrePush": "yarn lint && yarn format && cd src/renderer && yarn run check && yarn lint && yarn format && cd ../..",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck": "npm run typecheck:node",
    "start": "electron-vite preview",
    "dev": "concurrently -p \"[{time}] [{name}]\" -n=sveltekit,electron -c=red,blue \"electron-vite dev --watch\" \"yarn run dev:sveltekit\"",
    "build": "yarn test && yarn build:sveltekit && yarn typecheck && electron-vite build",
    "rebuild-appstore-lib": "yarn workspace appstore-tools build && rimraf ./node_modules ./src/renderer/node_modules && yarn cache clean && yarn install",
    "setup": "cd rust-utils && yarn && yarn build && cd .. && yarn build:libs",
    "build:libs": "yarn workspace appstore-tools install && yarn workspace appstore-tools build",
    "fetch:default-apps": "curl -L --output resources/default-apps/kando.webhapp https://github.com/holochain-apps/kando/releases/download/v0.9.5/kando.webhapp && curl -L --output resources/default-apps/devhub.happ https://drive.switch.ch/index.php/s/JnAynjVZsbRUidb/download && curl -L --output resources/default-apps/appstore.happ https://drive.switch.ch/index.php/s/JNVJIK949uG54W1/download",
    "fetch:binaries": "node ./scripts/fetch-binaries.mjs",
    "check:binaries": "node ./scripts/check-binaries.mjs",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "yarn check:binaries && yarn build && electron-builder --win --config",
    "build:mac": "yarn check:binaries && yarn build && electron-builder --mac --config",
    "build:linux": "yarn check:binaries && yarn build && electron-builder --linux --config",
    "dev:sveltekit": "cd src/renderer && yarn dev",
    "build:sveltekit": "cd src/renderer && yarn build",
    "prepare": "husky",
    "test": "tsc -p ./tsconfig.node.tests.json && mocha out-tests/src/main/tests/*.js"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@electron/notarize": "2.3.0",
    "@holochain/client": "^0.16.10",
    "@msgpack/msgpack": "^2.8.0",
    "@trpc/client": "^10.44.1",
    "@trpc/server": "^10.44.1",
    "adm-zip": "0.5.12",
    "appstore-tools": "file:./libs/appstore/dist",
    "bufferutil": "4.0.8",
    "commander": "12.0.0",
    "electron-serve": "^1.2.0",
    "electron-trpc": "^0.5.2",
    "electron-updater": "6.1.8",
    "elliptic": "6.5.5",
    "hc-launcher-rust-utils": "file:./rust-utils/dist",
    "js-sha256": "^0.11.0",
    "nanoid": "5.0.6",
    "semver": "^7.6.0",
    "split": "1.0.1",
    "winston": "3.13.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@napi-rs/cli": "^2.16.3",
    "@types/adm-zip": "0.5.5",
    "@types/elliptic": "6.4.18",
    "@types/mocha": "10.0.6",
    "@types/node": "^20.12.4",
    "@types/semver": "^7.5.8",
    "@types/split": "^1.0.5",
    "concurrently": "^8.2.2",
    "electron": "^29.2.0",
    "electron-builder": "^24.12.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-vite": "^2.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "get-port": "7.1.0",
    "husky": "^9.0.11",
    "js-yaml": "^4.1.0",
    "mocha": "10.4.0",
    "prettier": "^3.1.1",
    "rimraf": "5.0.5",
    "typescript": "^5.4.4",
    "utf-8-validate": "^6.0.3",
    "vite": "^5.2.8"
  }
}
